<fieldset class="required">
  <legend>Required Information</legend>
  <%= f.input :title %>

  <%= f.input :creator, as: :multi_value_select,
    collection: AuthoritiesService.find_all_agents,
    include_blank: true,
    #item_helper: method(:include_current_value),
    input_html: { class: 'form-control' } %>

  <%= f.input :resource_type, as: :multi_value_select,
    collection: MetadataService.find_all_resource_types,
    include_blank: true,
    input_html: { class: 'form-control' } %>

  <%= f.input :local_attribution, as: :multi_value_select,
    collection: MetadataService.local_attribution_list,
    include_blank: true,
    input_html: { class: 'form-control' } %>

    <%= render "records/edit_fields/language", f: f, key: 'language' %>

  <%= f.input :doi %>

  <%= f.input :description, as: :multi_value, input_html: { rows: '8', type: 'textarea'} %>
</fieldset>
