          <div class="panel-footer">
            <%= link_to t(:'hyrax.pages.cancel'), hyrax.admin_admin_sets_path, class: 'btn btn-default'%>
            <%= f.button :submit, class: 'btn btn-primary'%>
          </div>
        <% end %>
      </div>
    </div>
    <div id="search_tips" class="tab-pane">
      <div class="panel panel-default labels">
        <%= simple_form_for ContentBlock.for(:'search_tips'), url: hyrax.page_path(ContentBlock.for(:'search_tips')) do |f| %>
          <div class="panel-body">
            <div class="field form-group">
                <%= f.label :'Search tips' %><br>
