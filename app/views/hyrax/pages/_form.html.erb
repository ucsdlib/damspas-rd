          <div class="panel-footer">
            <%= link_to t(:'hyrax.pages.cancel'), hyrax.admin_admin_sets_path, class: 'btn btn-default'%>
            <%= f.button :submit, class: 'btn btn-primary'%>
          </div>
        <% end %>
      </div>
    </div>
    <div id="faq" class="tab-pane">
