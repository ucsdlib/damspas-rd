                <%= f.text_area :faq, value: f.object.value, class: 'form-control tinymce', rows: 20, cols: 120 %>
            </div>
          </div>
          <div class="panel-footer">
            <%= link_to t(:'hyrax.pages.cancel'), hyrax.admin_admin_sets_path, class: 'btn btn-default'%>
            <%= f.button :submit, class: 'btn btn-primary'%>
          </div>
        <% end %>
      </div>
    </div>
    <div id="takedown" class="tab-pane">
