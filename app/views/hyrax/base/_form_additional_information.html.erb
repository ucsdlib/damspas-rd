<fieldset class="optional prompt">
  <%= f.input :topic, as: :multi_value_select,
    collection: AuthoritiesService.find_all_subjects,
    include_blank: true,
    #item_helper: method(:include_current_value),
    input_html: { class: 'form-control' } %>

  <%= f.input :publisher, as: :multi_value_select,
    collection: AuthoritiesService.find_all_agents,
    include_blank: true,
    #item_helper: method(:include_current_value),
    input_html: { class: 'form-control' } %>
  <%= f.input :spatial, as: :multi_value_select,
    collection: AuthoritiesService.find_all_places,
    include_blank: true,
    input_html: { class: 'form-control' } %>

  <%= f.input :general_note, as: :multi_value %>
  <%= f.input :physical_description, as: :multi_value %>
  <%= f.input :created_date, as: :time_span %>
</fieldset>
